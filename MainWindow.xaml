        <OneUI2:ProgressBar
            Width="100"
            Height="20"
            Margin="20,0,0,0"
            Background="#1917171A"
            Foreground="#387AFF"
            IsIndeterminate="False"
            Value="100">

            <OneUI2:ProgressBar.MaskBrush>
                <brushes:ConicGradientBrush Resolution="1028" />
            </OneUI2:ProgressBar.MaskBrush>
        </OneUI2:ProgressBar>
        <OneUI:ProgressCircleDeterminate
            Margin="20,0,0,0"
            Background="#1919171A"
            Size="XLarge"
            Value="72">
            <OneUI:ProgressCircleDeterminate.Foreground>
                <!--  ConicGradientBrush của bạn  -->
                <brushes:ConicGradientBrush />
            </OneUI:ProgressCircleDeterminate.Foreground>
        </OneUI:ProgressCircleDeterminate>


