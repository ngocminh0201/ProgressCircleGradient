<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="ProgressCircleGradient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:OneUI="using:ProgressCircleGradient.Controls.ProgressCircle"
    xmlns:OneUI2="using:ProgressCircleGradient.Controls.ProgressBar"
    xmlns:brushes="using:ProgressCircleGradient.Brushes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProgressCircleGradient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProgressCircleGradient"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <Border
            Width="240"
            Height="240"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="12">
            <Border.Background>
                <!--  tăng Resolution nếu muốn nét hơn  -->
                <brushes:ConicGradientBrush Resolution="1028" />
            </Border.Background>
        </Border>
        <!--<Image
            Width="240"
            Height="240"
            Margin="20,0,0,0"
            Source="/Brushes/Rectangle 1297.png" />-->

        <OneUI:ProgressCircleDeterminate
            Margin="20,0,0,0"
            Background="#1919171A"
            Size="XLarge"
            Type="Determinate1"
            Visibility="Visible"
            Value="100">
            <OneUI:ProgressCircleDeterminate.Foreground>
                <!--  ConicGradientBrush của bạn  -->
                <brushes:ConicGradientBrush />
            </OneUI:ProgressCircleDeterminate.Foreground>
        </OneUI:ProgressCircleDeterminate>

        <OneUI2:ProgressBar
            Width="200"
            Height="20"
            Margin="20,0,0,0"
            Background="#1917171A"
            IsIndeterminate="False"
            Value="100" />

        <OneUI:ProgressCircleIndeterminate Margin="20,0,0,0" Size="XLarge">
            <OneUI:ProgressCircleIndeterminate.Foreground>
                <brushes:ConicGradientBrush />
            </OneUI:ProgressCircleIndeterminate.Foreground>
        </OneUI:ProgressCircleIndeterminate>

        <!--<OneUI:ProgressCircleDeterminate
            Margin="20,0,0,0"
            Background="#1917171A"
            Foreground="#387AFF"
            Size="XLarge"
            Value="36" />
        <OneUI:ProgressCircleIndeterminate
            Margin="20,0,0,0"
            PointForeground="#3DCC87"
            Size="XLarge" />
        <OneUI2:ProgressBar
            Width="200"
            Height="20"
            Margin="20,0,0,0"
            Background="#1917171A"
            Foreground="#387AFF"
            IsIndeterminate="True"
            Value="36" />

        <OneUI2:ProgressBar
            Width="200"
            Height="20"
            Margin="20,0,0,0"
            Background="#1917171A"
            Foreground="#387AFF"
            IsIndeterminate="False"
            Value="36" />-->
    </StackPanel>
</Window>
