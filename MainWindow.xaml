<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="ProgressCircleGradient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:OneUI="using:ProgressCircleGradient.Controls.ProgressCircle"
    xmlns:OneUI2="using:ProgressCircleGradient.Controls.ProgressBar"
    xmlns:brushes="using:ProgressCircleGradient.Brushes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:input="using:Microsoft.UI.Xaml.Input"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProgressCircleGradient"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <NavigationView
        x:Name="NavView"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        Loaded="NavView_Loaded"
        PaneDisplayMode="Left"
        SelectionChanged="NavView_SelectionChanged">

        <NavigationView.MenuItems>
            <!--  1. AngularGradientBrush  -->
            <NavigationViewItem Content="AngularGradientBrush" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem
                        x:Name="NavItem_AngularBorder"
                        Content="Border with AngularGradientBrush"
                        Tag="AngularBorder" />
                    <NavigationViewItem
                        x:Name="NavItem_AngularImage"
                        Content="Image gá»‘c"
                        Tag="AngularImage" />
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <!--  2. ProgressBar  -->
            <NavigationViewItem Content="ProgressBar" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem
                        x:Name="NavItem_PbDeterminate"
                        Content="Determinate"
                        Tag="ProgressBarDeterminate" />
                    <NavigationViewItem
                        x:Name="NavItem_PbIndeterminate"
                        Content="Indeterminate"
                        Tag="ProgressBarIndeterminate" />
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <!--  3. ProgressCircle  -->
            <NavigationViewItem Content="ProgressCircle" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem
                        x:Name="NavItem_PcDeterminate"
                        Content="Determinate"
                        Tag="ProgressCircleDeterminate" />
                    <NavigationViewItem
                        x:Name="NavItem_PcIndeterminate"
                        Content="Indeterminate"
                        Tag="ProgressCircleIndeterminate" />
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.Content>
            <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  AngularGradientBrush / Border  -->
                    <StackPanel
                        x:Name="Page_AngularBorder"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12"
                        Visibility="Collapsed">

                        <Border
                            Width="160"
                            Height="160"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="14">
                            <Border.Background>
                                <brushes:AngularGradientBrush />
                            </Border.Background>
                        </Border>
                    </StackPanel>

                    <!--  AngularGradientBrush / Image  -->
                    <StackPanel
                        x:Name="Page_AngularImage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12"
                        Visibility="Collapsed">

                        <Image
                            Width="160"
                            Height="160"
                            Source="/Brushes/Rectangle 1297.png" />
                    </StackPanel>

                    <!--  ProgressBar / Determinate (LinearGradientBrush)  -->
                    <StackPanel
                        x:Name="Page_ProgressBarDeterminate"
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="Collapsed">


                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="26">
                            <OneUI2:ProgressBar
                                x:Name="pbDeterminateLinear"
                                Width="360"
                                Height="20"
                                Background="#1917171A"
                                IsIndeterminate="False"
                                Value="50" />

                            <Slider
                                Width="220"
                                Margin="0,50,0,0"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="{Binding Value, ElementName=pbDeterminateLinear, Mode=TwoWay}" />

                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="6">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="Width" />
                                <TextBox
                                    x:Name="TbPbDeterminateWidth"
                                    Width="90"
                                    Text="360"
                                    TextChanged="TbPbDeterminateWidth_TextChanged" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--  ProgressBar / Indeterminate (LinearGradientBrush)  -->
                    <StackPanel
                        x:Name="Page_ProgressBarIndeterminate"
                        Margin="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="Collapsed">


                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="26">
                            <OneUI2:ProgressBar
                                x:Name="pbIndeterminateLinear"
                                Width="360"
                                Height="20"
                                Background="#1917171A"
                                IsIndeterminate="True"
                                Value="100" />

                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="6">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="Width" />
                                <TextBox
                                    x:Name="TbPbIndeterminateWidth"
                                    Width="90"
                                    Text="360"
                                    TextChanged="TbPbIndeterminateWidth_TextChanged">
                                    <TextBox.InputScope>
                                        <input:InputScope>
                                            <input:InputScope.Names>
                                                <input:InputScopeName NameValue="Number" />
                                            </input:InputScope.Names>
                                        </input:InputScope>
                                    </TextBox.InputScope>
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--  ProgressCircle / Determinate (AngularGradientBrush)  -->
                    <StackPanel
                        x:Name="Page_ProgressCircleDeterminate"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="Collapsed">

                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="26">
                            <OneUI:ProgressCircleDeterminate
                                x:Name="pcDeterminateAngular"
                                Background="#1919171A"
                                Size="Large"
                                Type="Determinate1"
                                Value="50">
                                <OneUI:ProgressCircleDeterminate.Foreground>
                                    <brushes:AngularGradientBrush />
                                </OneUI:ProgressCircleDeterminate.Foreground>
                            </OneUI:ProgressCircleDeterminate>

                            <StackPanel HorizontalAlignment="Center" Spacing="12">
                                <Slider
                                    Width="220"
                                    Margin="0,30,0,0"
                                    VerticalAlignment="Center"
                                    Maximum="100"
                                    Minimum="0"
                                    Value="{Binding Value, ElementName=pcDeterminateAngular, Mode=TwoWay}" />

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="Size" />
                                    <ComboBox
                                        x:Name="CbPcDeterminateSize"
                                        Width="160"
                                        SelectedIndex="3"
                                        SelectionChanged="CbPcDeterminateSize_SelectionChanged">
                                        <ComboBoxItem Content="SmallTitle" />
                                        <ComboBoxItem Content="Small" />
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="Large" />
                                        <ComboBoxItem Content="XLarge" />
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--  ProgressCircle / Indeterminate (AngularGradientBrush)  -->
                    <StackPanel
                        x:Name="Page_ProgressCircleIndeterminate"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="Collapsed">


                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="16">
                            <OneUI:ProgressCircleIndeterminate x:Name="pcIndeterminateAngular" Size="Large">
                                <OneUI:ProgressCircleIndeterminate.Foreground>
                                    <brushes:AngularGradientBrush />
                                </OneUI:ProgressCircleIndeterminate.Foreground>
                            </OneUI:ProgressCircleIndeterminate>

                            <StackPanel
                                Margin="100,0,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock VerticalAlignment="Center" Text="Size" />
                                <ComboBox
                                    x:Name="CbPcIndeterminateSize"
                                    Width="160"
                                    VerticalAlignment="Center"
                                    SelectedIndex="3"
                                    SelectionChanged="CbPcIndeterminateSize_SelectionChanged">
                                    <ComboBoxItem Content="SmallTitle" />
                                    <ComboBoxItem Content="Small" />
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="Large" />
                                    <ComboBoxItem Content="XLarge" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </NavigationView.Content>
    </NavigationView>
</Window>
