<Window
    x:Class="ProgressCircleGradient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:OneUI="using:ProgressCircleGradient.Controls.ProgressCircle"
    xmlns:OneUI2="using:ProgressCircleGradient.Controls.ProgressBar"
    xmlns:brushes="using:ProgressCircleGradient.Brushes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProgressCircleGradient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProgressCircleGradient"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <Border
            Width="240"
            Height="240"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="12">
            <Border.Background>
                <!--  tăng Resolution nếu muốn nét hơn  -->
                <brushes:ConicGradientBrush Resolution="1028" />
            </Border.Background>
        </Border>
