<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:OneUI="using:ProgressCircleGradient.Controls.ProgressBar">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="OneUIProgressBarForeground" Color="#387AFF" />
            <SolidColorBrush x:Key="OneUIProgressBarBackground" Color="#1919171A" />
            <LinearGradientBrush x:Key="OneUIProgressBarDeterminateForeground" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#FF387AFF" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="1.0" Color="#FF3DCC87" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="OneUIProgressBarIndeterminateForegroundMasked" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#00387AFF" />
                <GradientStop Offset="0.15" Color="#FF3CBBA0" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="0.85" Color="#FF3CB8A4" />
                <GradientStop Offset="1.0" Color="#003DCC87" />
            </LinearGradientBrush>

            <SolidColorBrush x:Key="OneUIProgressBarTex" Color="#252528" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="OneUIProgressBarForeground" Color="#387AFF" />
            <SolidColorBrush x:Key="OneUIProgressBarBackground" Color="#1919171A" />
            <LinearGradientBrush x:Key="OneUIProgressBarDeterminateForeground" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#FF387AFF" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="1.0" Color="#FF3DCC87" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="OneUIProgressBarIndeterminateForegroundMasked" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#00387AFF" />
                <GradientStop Offset="0.15" Color="#FF3CBBA0" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="0.85" Color="#FF3CB8A4" />
                <GradientStop Offset="1.0" Color="#003DCC87" />
            </LinearGradientBrush>

            <SolidColorBrush x:Key="OneUIProgressBarTex" Color="#252528" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="OneUIProgressBarForeground" Color="#387AFF" />
            <SolidColorBrush x:Key="OneUIProgressBarBackground" Color="#1919171A" />

            <LinearGradientBrush x:Key="OneUIProgressBarDeterminateForeground" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#FF387AFF" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="1.0" Color="#FF3DCC87" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="OneUIProgressBarIndeterminateForegroundMasked" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="#00387AFF" />
                <GradientStop Offset="0.15" Color="#FF3CBBA0" />
                <GradientStop Offset="0.19" Color="#FF3DCC87" />
                <GradientStop Offset="0.37" Color="#FF387AFF" />
                <GradientStop Offset="0.85" Color="#FF3CB8A4" />
                <GradientStop Offset="1.0" Color="#003DCC87" />
            </LinearGradientBrush>


            <SolidColorBrush x:Key="OneUIProgressBarTex" Color="#252528" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <x:Double x:Key="OneUIProgressBarIndicatorPauseOpacity">0.6</x:Double>
    <Thickness x:Key="OneUIProgressBarBorderThemeThickness">0</Thickness>
    <x:Double x:Key="OneUIProgressBarThemeMinHeight">4</x:Double>

    <Style
        x:Key="OneUICustomProgressBarIndeterminateStyle"
        BasedOn="{StaticResource OneUIProgressBarIndeterminateStyle}"
        TargetType="OneUI:ProgressBar">
        <Setter Property="Foreground" Value="{ThemeResource OneUIProgressBarIndeterminateForegroundMasked}" />
        <Setter Property="Background" Value="{ThemeResource OneUIProgressBarBackground}" />
    </Style>

    <Style
        x:Key="OneUICustomProgressBarDeterminateStyle"
        BasedOn="{StaticResource OneUIProgressBarDeterminateStyle}"
        TargetType="OneUI:ProgressBar">
        <Setter Property="Foreground" Value="{ThemeResource OneUIProgressBarDeterminateForeground}" />
        <Setter Property="Background" Value="{ThemeResource OneUIProgressBarBackground}" />
    </Style>

    <Style x:Key="OneUIProgressBarIndeterminateStyle" TargetType="OneUI:ProgressBar">
        <Setter Property="Foreground" Value="{ThemeResource OneUIProgressBarIndeterminateForegroundMasked}" />
        <Setter Property="Background" Value="{ThemeResource OneUIProgressBarBackground}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="OneUI:ProgressBar">
                    <Grid x:Name="TemplateRoot">
                        <StackPanel>
                            <Border
                                x:Name="outerBorder"
                                BorderThickness="0"
                                CornerRadius="4">
                                <Grid Margin="0,12,0,12">
                                    <Border
                                        x:Name="maskingBorder"
                                        Height="5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="2" />
                                    <Border Height="5" Background="Transparent">

                                        <Grid CornerRadius="2">
                                            <!--  Indeterminate_Part  -->
                                            <Grid x:Name="IndeterminateRoot" Height="5">
                                                <!--  Inactive track  -->
                                                <Rectangle
                                                    Height="5"
                                                    Fill="{ThemeResource OneUIProgressBarBackground}"
                                                    RadiusX="2"
                                                    RadiusY="2" />

                                                <!--  Active track (masked by same fade, implemented via alpha stops in the fill if needed)  -->
                                                <Grid x:Name="IndeterminateClipHost" Height="5">
                                                    <Rectangle
                                                        x:Name="IndeterminateActiveRect"
                                                        Height="5"
                                                        Fill="{TemplateBinding Foreground}"
                                                        RadiusX="2"
                                                        RadiusY="2">
                                                        <Rectangle.RenderTransform>
                                                            <TranslateTransform x:Name="IndeterminateTranslateTransform" />
                                                        </Rectangle.RenderTransform>
                                                    </Rectangle>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>

                            </Border>
                            <TextBlock
                                x:Name="OneUIProgressTextBlock"
                                Margin="24,0,24,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontFamily="SegoeUI"
                                FontSize="13"
                                FontWeight="Normal"
                                Foreground="{ThemeResource OneUIProgressBarTex}"
                                HorizontalTextAlignment="Center"
                                LineHeight="16"
                                MaxLines="2"
                                Text="{TemplateBinding Text}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />
                        </StackPanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Indeterminate">
                                    <Storyboard
                                        x:Name="IndeterminateAnimation"
                                        AutoReverse="False"
                                        RepeatBehavior="Forever"
                                        Duration="0:0:2.0">
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="IndeterminateTranslateTransform" Storyboard.TargetProperty="X">
                                            <!--  Values are set in code-behind based on ActualWidth  -->
                                            <SplineDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                                            <SplineDoubleKeyFrame KeyTime="0:0:1.2" Value="0" />
                                            <DiscreteDoubleKeyFrame KeyTime="0:0:2.0" Value="0" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OneUIProgressBarDeterminateStyle" TargetType="OneUI:ProgressBar">
        <Setter Property="Foreground" Value="{ThemeResource OneUIProgressBarDeterminateForeground}" />
        <Setter Property="Background" Value="{ThemeResource OneUIProgressBarBackground}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="OneUI:ProgressBar">
                    <Grid x:Name="TemplateRoot">
                        <StackPanel>
                            <Border
                                x:Name="outerBorder"
                                BorderThickness="0"
                                CornerRadius="2">
                                <Grid Margin="0,12,0,12">
                                    <Border
                                        x:Name="maskingBorder"
                                        Height="5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="2" />
                                    <Grid>
                                        <!--  Determinate_Part  -->
                                        <Border
                                            Height="5"
                                            Background="Transparent"
                                            CornerRadius="2" />
                                        <Border
                                            x:Name="DeterminateRoot"
                                            Height="5"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <Rectangle
                                                x:Name="ProgressBarIndicator"
                                                Margin="{TemplateBinding Padding}"
                                                HorizontalAlignment="Left"
                                                Fill="{TemplateBinding Foreground}"
                                                RadiusX="2"
                                                RadiusY="2" />
                                        </Border>
                                    </Grid>

                                </Grid>
                            </Border>
                            <TextBlock
                                x:Name="OneUIProgressTextBlock"
                                Margin="24,0,24,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontFamily="SegoeUI"
                                FontSize="13"
                                FontWeight="Normal"
                                Foreground="{ThemeResource OneUIProgressBarTex}"
                                HorizontalTextAlignment="Center"
                                LineHeight="16"
                                MaxLines="2"
                                Text="{TemplateBinding Text}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />
                        </StackPanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>